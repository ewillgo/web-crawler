<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.trianglex.webcrawler.common.dao.TaskTypeDAO">

    <select id="getTaskTypes" resultType="org.trianglex.webcrawler.common.domain.TaskType">
        select id, name, description, package_name
        from task_type
        where status = 1
        and deleted = 0
    </select>

    <insert id="addTaskType" keyColumn="id" keyProperty="id">
        insert into task_type (name, description, package_name, status, oper_by)
        values (#{name}, #{description}, #{package_name}, #{status}, #{oper_by})
    </insert>

    <update id="updateTaskTypeById">
        update task_type
        <foreach collection="data" index="k" item="v">
            <if test="v != null and v != ''">
                <set>${k} = ${v}</set>
            </if>
        </foreach>
        where id = #{id}
    </update>

</mapper>